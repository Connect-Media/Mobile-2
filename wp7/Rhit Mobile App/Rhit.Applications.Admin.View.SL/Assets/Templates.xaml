<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:map="clr-namespace:Microsoft.Maps.MapControl;assembly=Microsoft.Maps.MapControl"
    xmlns:cmds="clr-namespace:Rhit.Applications.Mvvm.Commands;assembly=Rhit.Applications.Mvvm.SL"
    xmlns:exts="clr-namespace:Rhit.Applications.Extentions.Controls;assembly=Rhit.Applications.Extentions.SL">

    <!-- TreeView Data Templates -->
    <sdk:HierarchicalDataTemplate x:Key="TreeTemplate" ItemsSource="{Binding ChildLocations}">
        <TextBlock Text="{Binding Name}" Foreground="White" />
    </sdk:HierarchicalDataTemplate>

    <sdk:HierarchicalDataTemplate x:Key="ServicesTreeTemplate" ItemsSource="{Binding Children}">
        <TextBlock Text="{Binding Name}" Foreground="Black" />
    </sdk:HierarchicalDataTemplate>

    <!-- Hyperlink Button Template -->
    <DataTemplate x:Key="LinkListTemplate">
        <HyperlinkButton Content="{Binding Name}" NavigateUri="{Binding Address}" VerticalAlignment="Center" TargetName="_blank" Foreground="DarkBlue" FontWeight="Bold" />
    </DataTemplate>



 

</ResourceDictionary>
