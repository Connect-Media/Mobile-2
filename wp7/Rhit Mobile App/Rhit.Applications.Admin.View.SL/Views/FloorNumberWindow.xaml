<controls:ChildWindow x:Class="Rhit.Applications.Views.FloorNumberWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
    xmlns:util="clr-namespace:Rhit.Applications.Mvvm.Utilities;assembly=Rhit.Applications.Mvvm.SL"
    Width="Auto" Height="Auto" Title="Building Floor Number">
    
    <controls:ChildWindow.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource StandardMarginStyle}" />
        <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}" />
    </controls:ChildWindow.Resources>
    
    <Grid Style="{StaticResource StandardMarginStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Enter the corresponding floor number of the loaded image." />
            <TextBox TabIndex="0" Text="{Binding FloorNumber, Mode=TwoWay, ValidatesOnExceptions=True}" util:BindingUtility.UpdateSourceOnChange="True" KeyUp="TextBox_KeyUp"/>
        </StackPanel>

        <Button Grid.Row="1" Content="OK" Click="OKButton_Click" Style="{StaticResource ButtonStyle}" />
    </Grid>
</controls:ChildWindow>