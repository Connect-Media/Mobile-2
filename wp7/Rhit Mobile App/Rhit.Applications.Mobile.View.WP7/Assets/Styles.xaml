<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:maps="clr-namespace:Microsoft.Phone.Controls.Maps;assembly=Microsoft.Phone.Controls.Maps"
    xmlns:exts="clr-namespace:Rhit.Applications.Extentions;assembly=Rhit.Applications.Extentions.WP7"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <SolidColorBrush x:Key="BuildingFillBrush" Color="DarkBlue" Opacity="0.5" />
    
    <SolidColorBrush x:Key="BuildingStrokeBrush" Color="White" Opacity="1.0" />
    
    <Style x:Key="BuildingStyle" TargetType="exts:StyledMapPolygon">
        <Setter Property="Fill" Value="{StaticResource BuildingFillBrush}" />
        <Setter Property="Stroke" Value="{StaticResource BuildingStrokeBrush}" />
        <Setter Property="StrokeThickness" Value="1" />
    </Style>

    <Style x:Key="HiddenBuildingStyle" TargetType="exts:StyledMapPolygon">
        <Setter Property="Fill" Value="Transparent" />
        <Setter Property="Stroke" Value="{StaticResource BuildingStrokeBrush}" />
        <Setter Property="StrokeThickness" Value="1" />
    </Style>

</ResourceDictionary>
    